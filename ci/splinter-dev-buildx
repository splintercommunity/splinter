set -e

docker buildx build \
  --platform linux/amd64,linux/arm64 \
  -t ghcr.io/splintercommunity/splinter-dev:v14 \
  -f ci/splinter-dev.dockerfile \
  --push .

docker run quay.io/skopeo/stable \
  copy \
  --dest-creds "${DOCKER_HUB_USERNAME}:${DOCKER_HUB_ACCESS_TOKEN}" \
  --multi-arch all \
  "docker://ghcr.io/splintercommunity/splinter-dev:v14" \
  "docker://docker.io/splintercommunity/splinter-dev:v14"
